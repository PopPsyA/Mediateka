<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.NoActionBar.MainActivityTheme">
        <item name="android:windowExitTransition">@transition/transition_main_exit</item>
        <item name="android:windowReenterTransition">@transition/transition_main_reenter</item>
    </style>

    <style name="AppTheme.NoActionBar.CinemaDetailTheme">
        <item name="android:windowEnterTransition">@transition/transition_cinema_detail_enter</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar.ActorDetailTheme">
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>